---
import Layout from "../layouts/Layout.astro";
import Header from "../components/StickyHeader.astro";
import Doodle from "../components/main-doodle.astro";
import MD from "../components/index.md";
---

<Layout title="Howdy!!">
  <Doodle />
  <div class="glass-overlay">
    <div class="container">
      <h1 class="text-gradient text-center">
        Howdy!! <span class="text-gradient">👋🏻</span>
      </h1>
      <h2 class="name text-center">
        Welcome to <span class="text-opposite-gradient">Jigs' Blog!</span>
      </h2>
      <h2 class="text-center">My name is John Johnson.</h2>
      <h3 class="text-center">But my friends call me Jigs!</h3>
      <img
        class="hidden avatar img-large"
        src="/me-business-pic_compressed-cropped.png"
      />
    </div>
  </div>
  <Header avatarSize={"large"} />

  <main>
    <div class="container">
      <MD />
      <h4>Take a look at some of my:</h4>
      <div>
        <a href="/experiments"
          ><button class="text-opposite-gradient">Experiments</button></a
        >
        <a href="/blog"><button class="text-opposite-gradient">Posts</button></a
        >
      </div>
    </div>
  </main>
</Layout>
