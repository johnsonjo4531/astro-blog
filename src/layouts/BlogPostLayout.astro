---
import Spoiler from "../components/Spoiler.astro";
import BlogLayout from "./BlogLayout.astro";
export interface Props {
  avatarSize?: "small" | "large" | "medium";
  title?: string;
}

const { avatarSize = "medium", title = "Howdy!!" } = Astro.props;
---



<BlogLayout title={title} avatarSize={avatarSize}>
  <slot />
</BlogLayout>

<style is:global>

  .spoiler {
    position: relative;
  }

  .spoiler::after {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    position: absolute;
    background-color: var(--info-color);
    color: white;
    content: "Click and Hold to Show Spoiler!";
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .spoiler:active::after {
    content: none;
  }
</style>