<style is:inline>
  @keyframes spincube {
    from {
      transform: rotate(0deg) var(--final-scale);
    }
    to {
      transform: var(--final-transform);
    }
  }
  @keyframes disappear {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .stage {
    --scale: 0.65;
    --stage-dim: var(--dim, 200);
    --rotation: 14deg;
    --translate-y: 35.5px;
    --final-scale: scale(1);
    --final-transform: translateY(var(--translate-y) * var(--dim) / 500)
      rotateX(var(--rotation));
    transform: var(--final-transform);
    /* transform: ; */

    transform-style: preserve-3d;
    transform-origin: calc(var(--stage-dim) / 2 * 1px)
      calc(var(--stage-dim) / 2 * 1px) 0;
  }

  .animate .stage {
    animation-name: spincube;
    animation-timing-function: ease-in-out;
    animation-iteration-count: 1;
    animation-duration: var(--animation-duration);
  }

  .cubespinner-container {
    width: calc(var(--dim, 200) * 1px);
    height: calc(var(--dim, 200) * 1px);
  }

  .cubespinner {
    width: calc(var(--dim, 200) * 1px);
    height: calc(var(--dim, 200) * 1px);
    --final-scale: scale(var(--scale)) scaleZ(var(--scale));
    --final-transform: rotateX(-45deg) rotateY(-45deg);

    transform: var(--final-transform);

    transform-style: preserve-3d;

    transform-origin: calc(var(--stage-dim) / 2 * 1px)
      calc(var(--stage-dim) / 2 * 1px) 0;
  }

  .animate .cubespinner {
    animation-name: spincube;
    animation-timing-function: ease-in-out;
    animation-iteration-count: 1;
    animation-duration: var(--animation-duration);
  }

  .animate .cubespinner {
    animation-name: spincube;
    animation-timing-function: ease-in-out;
    animation-iteration-count: 1;
    animation-duration: var(--animation-duration);
  }

  .cubespinner div {
    opacity: 0;
    position: absolute;
    width: calc(var(--stage-dim) * 1px);
    height: calc(var(--stage-dim) * 1px);
    transition: border-color;
    border: 1px solid rgba(var(--opposite-bg), 0.3);
    backdrop-filter: blur(10px);
    background-color: rgba(var(--current-bg), 0.5);
    line-height: calc(var(--stage-dim) * 1px);
    text-align: center;
  }

  .animate .cubespinner div {
    animation: disappear var(--animation-duration) linear 1;
  }

  .cubespinner .face1 {
    transform: translateZ(calc(var(--stage-dim) / 2 * 1px));
  }
  .cubespinner .face2 {
    transform: rotateY(90deg) translateZ(calc(var(--stage-dim) / 2 * 1px));
  }
  .cubespinner .face3 {
    transform: rotateY(90deg) rotateX(90deg)
      translateZ(calc(var(--stage-dim) / 2 * 1px));
  }
  .cubespinner .face4 {
    transform: rotateY(180deg) rotateZ(90deg)
      translateZ(calc(var(--stage-dim) / 2 * 1px));
  }
  .cubespinner .face5 {
    transform: rotateY(-90deg) rotateZ(90deg)
      translateZ(calc(var(--stage-dim) / 2 * 1px));
  }
  .cubespinner .face6 {
    transform: rotateX(-90deg) translateZ(calc(var(--stage-dim) / 2 * 1px));
  }
  .img-holder {
    position: relative;
  }
</style>

<div class="img-holder">
  <div
    class="stage"
    style="width: calc(var(--stage-dim) * 1px); height: calc(var(--stage-dim) * 1px);"
  >
    <div class="cubespinner">
      <div class="face1"></div>
      <div class="face2"></div>
      <div class="face3"></div>
      <div class="face4"></div>
      <div class="face5"></div>
      <div class="face6"></div>
    </div>
  </div>
  <slot />
</div>
