---
export interface Props {
  link: string;
  title: string;
  subTitle?: string;
}

const { link, title } = Astro.props;
---

<section class="blog-post">
  <h2>{title}</h2>
  <slot name="sub-title" />
  <div class="highlighted-card-section">
    <slot />
  </div>
  <a href={link}></a>
</section>

<style>
  .blog-post {
    transition: all 1s;
    position: relative;
    display: block;
    cursor: pointer;
    --border-color: rgba(var(--accent-bg), 0.15);
    --blog-post-padding: 30px;
    padding: 7px 30px;
    font-size: 1em;
    background-color: rgba(var(--opposite-bg), 0.2);
    color: rgba(var(--current-color));
    backdrop-filter: blur(3px);
    padding: var(--blog-post-padding);
    border-radius: 12px;
    border: 12px solid tomato;
    border-color: tomato;
    text-decoration: none !important;
    cursor: pointer;
    margin: 1.4em 0;
    animation: shimmery 1s linear infinite;
  }

  @keyframe shimmery {
    /* 0% {
      --border-color: rgba(var(--accent), 1);
      border-color: var(--border-color);
    } */

    50% {
      /* --border-color: var(--warning-color); */
      border-color: tomato;
    }

    /* 100% {
      border-color: var(--border-color);
    } */
  }

  .blog-post:hover {
    animation: shimmer 1s linear infinite;
  }

  .blog-post > a {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }
  time {
    display: inline-block;
    margin: 0 0 1.7em;
  }

  .highlighted-card-section {
    transition: all 1s;
    display: block;
    background-color: var(--border-color);
    padding: var(--blog-post-padding);
    margin: 0 calc(-1 * var(--blog-post-padding))
      calc(-1 * var(--blog-post-padding)) calc(-1 * var(--blog-post-padding));
  }
</style>
